<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameinfo"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Informate"
        android:textColor="#000000"
        android:textSize="34sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/quicksand_light"
        android:text="Informacion sobre los distintos tipos de vacunas y información de vacunación."
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Vacunas"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="En el Perú"
        android:textColor="#000000"
        android:textSize="24sp"/>



    <Button
        android:id="@+id/bda"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"

        android:background="@drawable/buttonround"
        android:fontFamily="@font/quicksand_medium"
        android:onClick="onClick"
        android:text="Dosis Aplicadas"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bva"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/buttonround"

        android:fontFamily="@font/quicksand_medium"
        android:onClick="onClick"
        android:text="Mapa segun MINSA"
        android:textSize="24sp" />




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recvacunas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="370dp" />





</FrameLayout>
