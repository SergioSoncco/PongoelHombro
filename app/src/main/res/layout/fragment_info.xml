<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameinfo"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Informate"
        android:textColor="#000000"
        android:textSize="34sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/quicksand_light"
        android:text="Informacion sobre los distintos tipos de vacunas."
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Vacunas"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="En el PerÃº"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_marginTop="150dp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">


        <LinearLayout
            android:id="@+id/linearvacunas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/b1"
                android:layout_width="180dp"
                android:layout_height="133dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/buttonround"
                android:fontFamily="@font/quicksand_medium"
                android:text="pfizer"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/buttonround"
                android:fontFamily="@font/quicksand_medium"
                android:text="sinopharm"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="210dp"
                android:layout_height="130dp"

                android:layout_marginStart="10dp"
                android:background="@drawable/buttonround"
                android:fontFamily="@font/quicksand_medium"
                android:text="astrazeneca"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/estadisticas"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="400dp"
        />

</FrameLayout>
