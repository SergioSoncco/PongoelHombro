<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framehome"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Hola!"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"

        android:textSize="34sp"
        tools:text="Hola!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="#624DC3"
        android:textSize="34sp"
        android:text="Usuario" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Que Quieres Hacer Hoy?"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="Dosis"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="330dp"
        android:fontFamily="casual"
        android:text="Noticias Minsa"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_marginTop="150dp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button8a"
                android:layout_width="180dp"
                android:layout_height="133dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonround"

                android:fontFamily="casual"
                android:text="1ra dosis"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8b"
                android:layout_width="180dp"
                android:layout_height="133dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonround"

                android:fontFamily="casual"
                android:text="2da dosis"
                android:textColor="#000000"
                android:textSize="24sp" />
            <Button
                android:id="@+id/button8c"
                android:background="@drawable/buttonround"
                android:layout_width="180dp"
                android:layout_height="133dp"
                android:layout_marginLeft="10dp"

                android:fontFamily="casual"
                android:text="3ra dosis"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyview"
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_marginTop="370dp"

        />


    <Button
        android:id="@+id/buttonlog"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:layout_marginLeft="330dp"

        android:text="Login"
        android:textColor="#000000"
        android:textSize="8dp" />


</FrameLayout>