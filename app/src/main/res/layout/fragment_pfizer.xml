<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PfizerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvvacunaname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Pfizer:"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvvacunapais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Pais de Origen"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ptv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-----"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/tvvacunalab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Laboratorio"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ptv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-----"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/tvvacunasintomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Sintomas despues de la vacuna"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ptv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-----"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="25sp"

            />


    </LinearLayout>

</FrameLayout>